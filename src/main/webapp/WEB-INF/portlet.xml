<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>SimplePortlet</portlet-name>
		<display-name>SimplePortlet</display-name>
		<portlet-class>eu.ibacz.edu.SimplePortlet</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>SimplePortlet</title>
			<short-title>SimplePortlet</short-title>
		</portlet-info>
	</portlet>
	<portlet>
		<portlet-name>FiboPortlet</portlet-name>
		<display-name>FiboPortlet</display-name>
		<portlet-class>eu.ibacz.edu.FiboPortlet</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
			<portlet-mode>edit</portlet-mode>
		</supports>
		<portlet-info>
			<title>FiboPortlet</title>
			<short-title>FiboPortlet</short-title>
		</portlet-info>
		<portlet-preferences>
			<preference>
				<name>numbersCount</name>
				<value>10</value>
			</preference>
		</portlet-preferences>
		<supported-publishing-event>
			<qname xmlns:x="http://edu.ibacz.eu/events">x:numberSelectedEvent</qname>
		</supported-publishing-event>
		<supported-public-render-parameter>selectedNumber</supported-public-render-parameter>
	</portlet>
	<portlet>
		<portlet-name>SessionConsumerPortlet</portlet-name>
		<display-name>SessionConsumerPortlet</display-name>
		<portlet-class>eu.ibacz.edu.SessionConsumerPortlet</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>SessionConsumerPortlet</title>
			<short-title>SessionConsumerPortlet</short-title>
		</portlet-info>
	</portlet>
	<portlet>
		<portlet-name>PrpConsumerPortlet</portlet-name>
		<display-name>PrpConsumerPortlet</display-name>
		<portlet-class>eu.ibacz.edu.PrpConsumerPortlet</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>PrpConsumerPortlet</title>
			<short-title>PrpConsumerPortlet</short-title>
		</portlet-info>
		<supported-public-render-parameter>selectedNumber</supported-public-render-parameter>
	</portlet>
	<portlet>
		<portlet-name>EventConsumerPortlet</portlet-name>
		<display-name>EventConsumerPortlet</display-name>
		<portlet-class>eu.ibacz.edu.EventConsumerPortlet</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<portlet-info>
			<title>EventConsumerPortlet</title>
			<short-title>EventConsumerPortlet</short-title>
		</portlet-info>
		<supported-processing-event>
			<qname xmlns:x="http://edu.ibacz.eu/events">x:numberSelectedEvent</qname>
		</supported-processing-event>
	</portlet>
	<event-definition>
		<qname xmlns:x="http://edu.ibacz.eu/events">x:numberSelectedEvent</qname>
		<value-type>java.lang.Integer</value-type>
	</event-definition>
	<public-render-parameter>
		<identifier>selectedNumber</identifier>
		<qname xmlns:x="http://edu.ibacz.eu/params">x:selectedNumber</qname>
	</public-render-parameter>
</portlet-app>